{
	"parser": "@typescript-eslint/parser",
	"extends": [
		"next/core-web-vitals",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"plugins": ["@typescript-eslint", "prettier"],
	"rules": {
		"no-eval": "error",
		"no-unused-vars": [
			"warn",
			{
				"args": "after-used",
				"ignoreRestSiblings": true
			}
		],
		"no-unused-expressions": "warn",
		"no-console": "warn",
		"no-trailing-spaces": "error",
		"semi": "warn"
	}
}
